<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_profile"
        android:contentDescription="Profile Picture"
        android:scaleType="centerCrop"/>

    <!-- User Info -->
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@example.com"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <!-- Buttons for Actions -->
    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:backgroundTint="@color/lightBlue"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/btnRestoreData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restore Data"
        android:backgroundTint="@color/accentBlue"
        android:layout_marginTop="16dp"/>

    <!-- Additional Export Buttons -->

    <Button
        android:id="@+id/btnExportData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Data as text"
        android:backgroundTint="@color/teal_700"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnExportJson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export Data as JSON"
        android:backgroundTint="@color/teal_700"
        android:layout_marginTop="16dp" />



</LinearLayout>
